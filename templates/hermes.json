{
    "configSchemaVersion": "1.0.16",
    "deploymentMode": "{HERMES_DEPLOYMENT_MODE}",
    "alerts": {
        "emailAddressFrom": "prodiguer-ops@ipsl.listes.fr",
        "emailAddressTo": "prodiguer-ops@ipsl.listes.fr"
    },
    "apps": {
        "monitoring": {
            "defaultJobWarningDelayInSeconds": 86400
        }
    },
    "db": {
        "mongodb": {
            "main": "mongodb://prodiguer-db-mongo-user:{HERMES_DB_MONGO_USER_PASSWORD}@{HERMES_DB_MONGO_HOST}/metrics"
        },
        "pgres": {
            "main": "postgresql://hermes_db_user:{HERMES_DB_PGRES_USER_PASSWORD}@{HERMES_DB_PGRES_HOST}/hermes"
        }
    },
    "mq": {
        "connections": {
            "main": "{HERMES_MQ_RABBIT_PROTOCOL}://hermes-mq-user:{HERMES_MQ_RABBIT_USER_PASSWORD}@{HERMES_MQ_RABBIT_HOST}/hermes?connection_attempts=3&heartbeat_interval=3600&{HERMES_MQ_RABBIT_SSL_OPTIONS}"
        },
        "deletableTypes": [],
        "excludedTypes": ["7000", "1900", "2900"],
        "mail": {
            "checker": {
                "maxLatencyInSeconds": 1800,
                "maxUnprocessedCount": 20,
                "retryDelayInSeconds": 3600
            },
            "deleteProcessed": false,
            "host": "courriel3.ipsl.jussieu.fr",
            "smtpPort": 587,
            "idleFaultRetryDelayInSeconds": 60,
            "mailbox": "{HERMES_MQ_IMAP_MAILBOX}",
            "mailbox_processed": "{HERMES_MQ_IMAP_MAILBOX}-PROCESSED",
            "password": "{HERMES_MQ_IMAP_PASSWORD}",
            "username": "superviseur"
        }
    },
    "web": {
        "cookie_secret": "{HERMES_WEB_COOKIE_SECRET}",
        "port": {HERMES_WEB_PORT},
        "url": "{HERMES_WEB_URL}",
        "websocketKeepAliveDelayInSeconds": 280
    }
}